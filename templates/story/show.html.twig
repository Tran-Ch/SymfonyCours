{# templates/story/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Story{% endblock %}

{% block body %}
<div class="container mt-4">

    {# HEADER + NÚT LIKE #}
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-success text-white">
            <div class="d-flex align-items-center">
                <img src="{{ asset(story.utilisateur.avatarPath) }}"
                     alt="avatar"
                     class="rounded-circle me-2"
                     style="width:32px;height:32px;object-fit:cover;border:1px solid #fff;">
                <span>
                    Story de <strong>{{ story.utilisateur.displayName }}</strong>
                </span>
            </div>

            <form method="post" action="{{ path('app_story_like', {id: story.id}) }}">
                <button class="btn btn-sm {{ story.isLikedByUser(app.user) ? 'btn-light' : 'btn-outline-light' }}">
                    ❤ {{ story.likesCount }}
                    {{ story.isLikedByUser(app.user) ? 'Je n’aime plus' : 'J’aime' }}
                </button>
            </form>
        </div>

        {# === ẢNH STORY (NẾU CÓ) ===
           Giả sử thuộc tính hình trong entity Story là "image"
           Và file được lưu trong thư mục public/Image
        #}
        {% if story.image %}
            <div class="text-center my-3">
                <img src="{{ asset('Image/' ~ story.image) }}"
                     alt="Image de l'histoire"
                     class="img-fluid rounded shadow-sm"
                     style="max-height:350px;object-fit:cover;">
            </div>
        {% endif %}

        <div class="card-body">
            <p class="card-text">{{ story.contenu|nl2br }}</p>
        </div>
    </div>

    {# DANH SÁCH COMMENT #}
    <h5 class="mb-3">Commentaires ({{ comments|length }})</h5>

    {% if comments is not empty %}
        <div class="list-group mb-4">
            {% for comment in comments %}
                <div class="list-group-item">
                    <div class="d-flex justify-content-between">
                        <div class="d-flex align-items-center">
                            {% if comment.utilisateur %}
                                <img src="{{ asset(comment.utilisateur.avatarPath) }}"
                                     alt="avatar"
                                     class="rounded-circle me-2"
                                     style="width:28px;height:28px;object-fit:cover;border:1px solid #ccc;">
                                <strong>{{ comment.utilisateur.displayName }}</strong>
                            {% else %}
                                <strong>Anonyme</strong>
                            {% endif %}
                        </div>
                        <small class="text-muted">{{ comment.date|date('d/m/Y') }}</small>
                    </div>
                    <p class="mb-0 mt-2">{{ comment.text|nl2br }}</p>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-muted mb-4">
            Aucun commentaire pour l’instant, soyez le premier !
        </p>
    {% endif %}

    {# FORM COMMENT #}
    <div class="card">
        <div class="card-header">Laisser un commentaire</div>
        <div class="card-body">
            {% if app.user %}
                {{ form_start(commentForm) }}
                    {{ form_widget(commentForm) }}
                    <div class="mt-3 text-end">
                        <button type="submit" class="btn btn-primary">Publier</button>
                    </div>
                {{ form_end(commentForm) }}
            {% else %}
                <p class="text-muted">
                    Vous devez être connecté pour commenter.
                    <a href="{{ path('app_login') }}">Se connecter</a>
                </p>
            {% endif %}
        </div>
    </div>

</div>
{% endblock %}
