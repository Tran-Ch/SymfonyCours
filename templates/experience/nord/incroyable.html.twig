{% extends 'base.html.twig' %}

{% block title %}Expérience incroyable du Nord{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    main {
      margin-top: 130px;
      padding: 40px 20px 60px 20px;
      background-color: rgba(233, 238, 209, 1);
    }

    .grid-page {
      max-width: 1200px;
      margin: 0 auto;
    }

    .grid-page-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 24px;
    }

    .grid-page-header h1 {
      font-size: 26px;
      color: #4a5932;
      margin: 0;
    }

    .grid-page-header a {
      font-size: 14px;
    }

    .grid-wrapper {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      grid-auto-rows: 200px;
      gap: 20px;
    }

    .grid-card {
      background-color: #d7e48e;
      border-radius: 14px;
      padding: 12px;
      box-shadow: 0 3px 8px rgba(0,0,0,0.15);
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      cursor: pointer;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .grid-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 12px rgba(0,0,0,0.18);
    }

    .grid-card-title {
      font-weight: bold;
      margin-bottom: 8px;
      font-size: 16px;
      color: #3d4a27;
    }

    .grid-card-text {
      font-size: 13px;
      color: #334;
      flex-grow: 1;
    }

    .grid-card-footer {
      font-size: 12px;
      color: #566;
      margin-top: 8px;
      text-align: right;
    }

    @media (max-width: 992px) {
      .grid-wrapper {
        grid-template-columns: repeat(2, minmax(0, 1fr));
        grid-auto-rows: 180px;
      }
    }

    @media (max-width: 576px) {
      main {
        margin-top: 110px;
        padding: 25px 10px 40px 10px;
      }
      .grid-wrapper {
        grid-template-columns: 1fr;
        grid-auto-rows: 180px;
      }
    }
  </style>
{% endblock %}

{% block body %}
  <section class="grid-page">
    <div class="grid-page-header">
      <h1>EXPÉRIENCE INCROYABLE DU NORD</h1>
      <a href="{{ path('app_nord') }}" class="btn btn-long">← Retour à la carte du Nord</a>
    </div>

    <div class="grid-wrapper">
      {# Mỗi card là một thành phố / trải nghiệm. Bạn thay nội dung + hình nền sau này #}
      {% for i in 1..6 %}
        <article class="grid-card">
          <div class="grid-card-title">Ville / Lieu {{ i }}</div>
          <div class="grid-card-text">
            Mô tả ngắn về trải nghiệm ấn tượng ở miền Bắc (trekking, ruộng bậc thang,
            bản làng, v.v.). Thay nội dung thực tế sau.
          </div>
          <div class="grid-card-footer">♥ 0 likes – 0 comments</div>
        </article>
      {% endfor %}
    </div>
  </section>
{% endblock %}
