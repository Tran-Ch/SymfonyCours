{% extends 'base.html.twig' %}

{% block title %}Liste des √©v√©nements{% endblock %}

{% block body %}
<style>
  .event-container {
    max-width: 1200px;
    margin: 40px auto;
    padding: 0 10px 40px 10px;
  }
  .event-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
  }
  .event-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 24px;
  }
  .event-card {
    background: #fdfdf8;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    display: flex;
    flex-direction: column;
  }
  .event-card img {
    width: 100%;
    height: 190px;
    object-fit: cover;
  }
  .event-body {
    padding: 12px 16px 16px 16px;
    font-size: 13px;
  }
  .event-title {
    font-size: 15px;
    font-weight: bold;
    margin-bottom: 8px;
  }
  .event-meta {
    margin-bottom: 4px;
  }
  .event-meta strong {
    font-weight: 600;
  }
  .event-badges {
    margin-top: 6px;
    margin-bottom: 10px;
  }
  .badge {
    display: inline-block;
    padding: 3px 8px;
    border-radius: 8px;
    font-size: 11px;
    margin-right: 4px;
  }
  .badge-secondary { background:#6c757d; color:#fff; }
  .badge-success   { background:#28a745; color:#fff; }
  .badge-info      { background:#17a2b8; color:#fff; }

  .event-actions {
    margin-top: 8px;
    display: flex;
    gap: 6px;
    align-items: center;
    flex-wrap: wrap;
  }

  .btn-sm {
    padding: 5px 10px;
    font-size: 12px;
    border-radius: 8px;
  }
</style>

<div class="event-container">
  <div class="event-header">
    <h1>Liste des √©v√©nements</h1>
    <a href="{{ path('app_evenement_creer') }}" class="btn btn-primary">
      ‚ûï Nouvel √©v√©nement
    </a>
  </div>

  {% for message in app.flashes('success') %}
    <div class="alert alert-success">{{ message }}</div>
  {% endfor %}

  {% if evenements|length > 0 %}
    <div class="event-grid">
      {% for evenement in evenements %}
        <article class="event-card">
          {% if evenement.image %}
            <img src="{{ asset('Image/' ~ evenement.image) }}"
                 alt="{{ evenement.nom }}">
          {% endif %}

          <div class="event-body">
            <div class="event-title">{{ evenement.nom }}</div>

            <div class="event-meta">
              üìÖ <strong>D√©but:</strong>
              {{ evenement.dateDebut|date('d/m/Y H:i') }}
            </div>
            <div class="event-meta">
              üìÖ <strong>Fin:</strong>
              {{ evenement.dateFin|date('d/m/Y H:i') }}
            </div>
            <div class="event-meta">
              üìç <strong>Lieu:</strong> {{ evenement.lieu }}
            </div>

            <div class="event-badges">
              <span class="badge badge-secondary">
                {{ evenement.categorie|title }}
              </span>
              {% if evenement.prix %}
                <span class="badge badge-success">
                  {{ evenement.prix }} ‚Ç¨
                </span>
              {% else %}
                <span class="badge badge-info">
                  Gratuit
                </span>
              {% endif %}
            </div>

            <div class="event-actions">
              <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}"
                 class="btn btn-outline-primary btn-sm">
                üëÅÔ∏è Voir
              </a>
              <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}"
                 class="btn btn-outline-warning btn-sm">
                ‚úèÔ∏è Modifier
              </a>

              {# ==== N√öT TH√äM / B·ªé KH·ªéI "MES √âV√âNEMENTS" C·ª¶A USER ==== #}
              {% if app.user %}
                {# true n·∫øu event n√†y ƒë√£ thu·ªôc v·ªÅ user #}
                {% set isInMyEvents = app.user and (evenement in app.user.evenements) %}

                <form method="post"
                      action="{{ path('app_evenement_toggle_my', {'id': evenement.id}) }}"
                      style="display:inline-block; margin-left:auto;">
                  <button type="submit"
                          class="btn btn-sm"
                          style="background-color:#6f8680;color:white;border:none;border-radius:999px;padding:5px 14px;">
                    {% if isInMyEvents %}
                      Retirer de mes √©v√©nements
                    {% else %}
                      Ajouter √† mes √©v√©nements
                    {% endif %}
