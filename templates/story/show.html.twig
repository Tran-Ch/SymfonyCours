{% extends 'base.html.twig' %}

{% block title %}Story{% endblock %}

{% block body %}
<div class="container mt-4">

    {# HEADER + NÚT LIKE #}
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-success text-white">
            <div>
                Story de
                <strong>{{ story.utilisateur.prenom ?? story.utilisateur.email ?? 'Utilisateur' }}</strong>
            </div>

            <form method="post" action="{{ path('app_story_like', {id: story.id}) }}">
                <button class="btn btn-sm {{ story.isLikedByUser(app.user) ? 'btn-light' : 'btn-outline-light' }}">
                    ❤ {{ story.likesCount }}
                    {{ story.isLikedByUser(app.user) ? 'Je n’aime plus' : 'J’aime' }}
                </button>
            </form>
        </div>
        <div class="card-body">
            <p class="card-text">{{ story.contenu|nl2br }}</p>
        </div>
    </div>

    {# DANH SÁCH COMMENT #}
    <h5 class="mb-3">Commentaires ({{ comments|length }})</h5>

    {% if comments is not empty %}
        <div class="list-group mb-4">
            {% for comment in comments %}
                <div class="list-group-item">
                    <div class="d-flex justify-content-between">
                        <strong>{{ comment.utilisateur.prenom ?? comment.utilisateur.email ?? 'Anonyme' }}</strong>
                        <small class="text-muted">{{ comment.date|date('d/m/Y') }}</small>
                    </div>
                    <p class="mb-0 mt-2">{{ comment.text|nl2br }}</p>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-muted mb-4">
            Aucun commentaire pour l’instant, soyez le premier !
        </p>
    {% endif %}

    {# FORM COMMENT #}
    <div class="card">
        <div class="card-header">Laisser un commentaire</div>
        <div class="card-body">
            {% if app.user %}
                {{ form_start(commentForm) }}
                    {{ form_widget(commentForm) }}
                    <div class="mt-3 text-end">
                        <button type="submit" class="btn btn-primary">Publier</button>
                    </div>
                {{ form_end(commentForm) }}
            {% else %}
                <p class="text-muted">
                    Vous devez être connecté pour commenter.
                    <a href="{{ path('app_login') }}">Se connecter</a>
                </p>
            {% endif %}
        </div>
    </div>

</div>
{% endblock %}
