{% extends 'base.html.twig' %}

{% block title %}Mes histoires{% endblock %}

{% block body %}
<div class="container mt-4">

    {# HEADER PROFILE (avatar + tên) #}
    <div class="d-flex align-items-center mb-4">
        <img src="{{ asset('images/default-avatar.png') }}" alt="avatar"
             class="rounded-circle me-3"
             style="width:70px;height:70px;object-fit:cover;">
        <div>
            {# trước đây: {{ user.prenom ?? user.email }} #}
            <h4 class="mb-0">{{ user.displayName }}</h4>
            <small class="text-muted">Story de voyage</small>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">Vos publications</h5>
        <a href="{{ path('app_story_new') }}" class="btn btn-sm btn-primary">
            + Créer une histoire
        </a>
    </div>

    {% if stories is empty %}
        <p class="text-muted">Vous n’avez pas encore publié d’histoire.</p>
    {% else %}
        <div class="row g-3">
            {% for story in stories %}
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <p class="card-text">
                                {{ story.contenu|slice(0, 120) ~ (story.contenu|length > 120 ? '...' : '') }}
                            </p>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <a href="{{ path('app_story_show', {id: story.id}) }}"
                                   class="btn btn-sm btn-outline-success">
                                    Voir
                                </a>
                                <div class="text-muted small">
                                    ❤ {{ story.likesCount }} ·
                                    {{ story.comments|length }} commentaires
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

</div>
{% endblock %}
