{% extends 'base.html.twig' %}

{% block title %}D√©tails de l'histoire{% endblock %}

{% block body %}
<style>
  .story-layout {
    max-width: 1200px;
    margin: 40px auto;
    display: grid;
    grid-template-columns: 2fr 1.2fr;
    gap: 24px;
  }

  .story-main {
    background: #ffffff;
    border-radius: 12px;
    padding: 20px 24px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.08);
  }

  .story-main h1 {
    font-size: 22px;
    margin-bottom: 10px;
    color: #304030;
  }

  .story-meta {
    font-size: 13px;
    color: #707c70;
    margin-bottom: 16px;
  }

  .story-content {
    font-size: 15px;
    line-height: 1.6;
    white-space: pre-wrap;
  }

  /* C·ªôt ph·∫£i ‚Äì √©v√©nements */
  .story-events {
    background: #f8faf5;
    border-radius: 12px;
    padding: 16px 18px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.06);
  }

  .story-events h3 {
    font-size: 18px;
    margin-bottom: 12px;
    color: #305433;
  }

  .event-card {
    background: #ffffff;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 1px 4px rgba(0,0,0,0.08);
    margin-bottom: 12px;
  }

  .event-card img {
    width: 100%;
    height: 140px;
    object-fit: cover;
  }

  .event-card-body {
    padding: 10px 12px 12px 12px;
  }

  .event-card-title {
    font-size: 14px;
    font-weight: bold;
    margin: 0 0 6px 0;
    color: #2f3b24;
  }

  .event-card-meta {
    font-size: 12px;
    color: #506050;
    margin-bottom: 6px;
  }

  .event-card-lieu {
    font-size: 12px;
    color: #304030;
    margin-bottom: 8px;
  }

  .event-card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 12px;
  }

  .event-badge {
    padding: 2px 6px;
    border-radius: 4px;
    background: #d7e48e;
    color: #304030;
  }

  .event-link {
    font-size: 12px;
  }

  /* Commentaires */
  .comments-block {
    margin-top: 30px;
  }

  .comment-item {
    border-bottom: 1px solid #e2e8dc;
    padding: 10px 0;
  }

  .comment-meta {
    font-size: 12px;
    color: #6c757d;
    margin-bottom: 4px;
  }

  .comment-content {
    font-size: 14px;
  }

  @media (max-width: 768px) {
    .story-layout {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="story-layout">
  {# ==== C·ªòT TR√ÅI: STORY + COMMENT ==== #}
  <section class="story-main">
    <h1>Votre histoire</h1>

    <p class="story-meta">
      {% if story.utilisateur %}
        R√©dig√©e par un voyageur
      {% endif %}
      ‚Äì #{{ story.id }}
    </p>

    <div class="story-content">
      {{ story.contenu|nl2br }}
    </div>

    {# ----- Commentaires ----- #}
    <div class="comments-block">
      <h3 style="font-size:18px; margin-bottom:10px;">Commentaires</h3>

      {% if comments is defined and comments|length > 0 %}
        {% for comment in comments %}
          <div class="comment-item">
            <div class="comment-meta">
              {% if comment.utilisateur is defined and comment.utilisateur %}
                Par un utilisateur ‚Äì
              {% endif %}
              {{ comment.date|date('d/m/Y H:i') }}
            </div>
            <div class="comment-content">
              {{ comment.contenu|nl2br }}
            </div>
          </div>
        {% endfor %}
      {% else %}
        <p class="text-muted" style="font-size: 13px;">Aucun commentaire pour l‚Äôinstant.</p>
      {% endif %}

      {# Formulaire d'ajout de commentaire #}
      <div class="mt-3">
        {{ form_start(commentForm) }}
          {{ form_widget(commentForm) }}
          <button class="btn btn-success mt-2">Publier mon commentaire</button>
        {{ form_end(commentForm) }}
      </div>
    </div>
  </section>

  {# ==== C·ªòT PH·∫¢I: √âV√âNEMENTS LI√âS ==== #}
  <aside class="story-events">
    <h3>√âv√©nements inspir√©s par cette story</h3>

    {% if evenements is defined and evenements|length > 0 %}
      {% for evenement in evenements %}
        <article class="event-card">
          {% if evenement.image %}
            {# ·∫¢nh n·∫±m trong public/Image #}
            <img src="{{ asset('Image/' ~ evenement.image) }}"
                 alt="{{ evenement.nom }}">
          {% endif %}

          <div class="event-card-body">
            <p class="event-card-title">{{ evenement.nom }}</p>

            <p class="event-card-meta">
              üìÖ
              {{ evenement.dateDebut|date('d/m/Y') }}
              {% if evenement.dateFin %}
                ‚Äì {{ evenement.dateFin|date('d/m/Y') }}
              {% endif %}
            </p>

            <p class="event-card-lieu">
              üìç {{ evenement.lieu }}
            </p>

            <div class="event-card-footer">
              <span class="event-badge">
                {{ evenement.categorie|title }}
              </span>

              <a href="{{ path('app_evenement_show', {id: evenement.id}) }}"
                 class="btn btn-sm btn-outline-primary event-link">
                Voir l‚Äô√©v√©nement
              </a>
            </div>
          </div>
        </article>
      {% endfor %}
    {% else %}
      <p style="font-size: 13px; color:#555;">
        Aucun √©v√©nement n‚Äôest encore associ√© √† cette story.
      </p>
    {% endif %}
  </aside>
</div>
{% endblock %}
